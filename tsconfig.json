{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@component/*": [
        "resources/js/components/*"
      ],
      "@data/*": [
        "resources/js/defaultData/*"
      ],
      "@interface/*": [
        "resources/js/interfaces/*"
      ],
      "@page/*": [
        "resources/js/pages/*"
      ],
      "@svg/*": [
        "public/svg/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "vendor",
    "dist",
  ]
}
